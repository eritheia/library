<table class="table table-striped table-bordered table-hover bg-light text-dark">
  <thead class="thead-dark">
    <th>Book title</th>
    <th>Requested by</th>
    <th>Status</th>
    <th>Request Time</th>
    <th>Accept/Reject Time</th>
    <th>Return Date</th>
    <th>Due Date</th>
    <th>Fine</th>   
    <th colspan="4" style="text-align: center;">Actions</th>
  </thead>
  <tbody>
        <% @requests.each do |request| %>
      <tr>
        <td><%= request.book.title %></td>
        <td><%= request.user.email %></td>
        <th><%= request.request_type %></th>
        <th><%= request.created_at%></th>
        <th><%= request.updated_at%></th>
        <th><%= request.updated_at%></th>
        <th><%= request.due_date%></th>
        <th><%= request.fine%></th>
        <td><%= link_to "Return", return_action_book_path(request.book.id), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

