<div> <%= link_to "New Reader", new_reader_path, remote: true, class:"btn btn-outline-success" %> </div> </br>
<div id= 'new'></div> <br>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th colspan="2" style="text-align: center;">Operations</th>
    </tr>
  </thead>
  <tbody>
        <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.first_name %></td>
        <td><%= reader.last_name %></td>
        <td><%= reader.email %></td>
        <td><%= link_to "Delete", "/readers/#{reader.id}", remote: true, method: :delete, data: { confirm: 'Are you
          sure?' }, class:"btn btn-danger btn-lg" %></td></td>
        <td><%= link_to "Show", "/readers/#{reader.id}", remote: true, method: :get, class:"btn btn-primary btn-lg", id: 'show_button'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id='show_div'></div>