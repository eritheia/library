<div> <%= link_to "New Reader", new_reader_path, class:"btn btn-outline-success", data: { bs_toggle: 'modal', bs_target: '#newUserModal', remote: true } %>
 </div> 
 </br>
 <br>
<table class="table table-striped table-bordered table-hover text-white">
  <thead class="thead-dark">
    <tr>
   <h4> <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th colspan="2" style="text-align: center;">Operations</th>
    </tr>
  </thead>
  <tbody>
        <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.first_name %></td>
        <td><%= reader.last_name %></td>
        <td><%= reader.email %></td>
        <td><%= link_to "Delete", "/readers/#{reader.id}", remote: true, method: :delete, data: { confirm: 'Are you
          sure?' }, class:"btn btn-danger btn-lg" %></td></td>
        <td><%= link_to "Show", "/readers/#{reader.id}", method: :get, class:"btn btn-primary btn-lg", data: { bs_toggle: 'modal', bs_target: '#showUserModal', remote: true } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showUserModalLabel">Show Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
      <div id='show_div'></div>
    </div>
  </div>
</div> 


<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="newUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newUserModalLabel">Create Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
      <div id='new'></div>
    </div>
  </div>
</div> 